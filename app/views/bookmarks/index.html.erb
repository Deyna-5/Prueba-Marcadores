<p id="notice"><%= notice %></p>

<div>
  <h4 class="text-center mb-4">Crear un nuevo marcador</h4>
  <%= render "form" %>
</div>

<h1 class="text-center my-4">Bookmarks</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Url</th>
      <th>Category</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="table">
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.url %></td>
        <td><%= bookmark.category.name %></td>
        <td><%= bookmark.type.name %></td>
        <td><%= link_to 'Show', bookmark %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

