<p id="notice"><%= notice %></p>

<h1 class="text-center my-4">Categorias</h1>

<table class="table table-hover">
  <thead class="bg-info text-white">
    <tr>
      <th>Nombre</th>
      <th>Publica</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.public %></td>
        <td><%= link_to 'Ver', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "Atras", root_path, class: "btn btn-outline-info" %>
<%= link_to 'Crear una nueva categoria', new_category_path, class: "btn btn-outline-info" %>